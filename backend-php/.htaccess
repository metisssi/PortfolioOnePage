RewriteEngine On

# If the request is for the api directory, let it through
RewriteRule ^api/ - [L]

# Serve frontend files directly if they exist
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Otherwise serve index.html (for SPA)
RewriteRule ^ index.html [L]
